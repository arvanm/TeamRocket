<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Name="BrowseItemsPage"
             x:Class="Game.Views.ShowMonstersPage"
             Title="{Binding Title}">

    <ContentPage.Content>
        <ScrollView VerticalScrollBarVisibility="Never">
            <StackLayout Style="{StaticResource OuterBoxStack}">

                <Label Text="Fight these Monsters" Style="{StaticResource CenterMessageLargeStyle}"/>



                <FlexLayout BindableLayout.ItemsSource="{Binding DatabaseCharacterList}"
                            Wrap="Wrap"
                            Direction="Row"
                            JustifyContent="SpaceEvenly">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Padding="10"
                                         HorizontalOptions="Center">

                                <ImageButton Source="{Binding ImageURI}"
                                             CommandParameter="{Binding Id}"
                                             HeightRequest="80" WidthRequest="80"/>

                                <Label Text="{Binding Name}"
                                       HorizontalTextAlignment="Center" />

                                <StackLayout Orientation="Horizontal"
                                             HorizontalOptions="Center">
                                    <Label Text="Level" />
                                    <Label Text="{Binding Level}" />
                                </StackLayout>

                            </StackLayout>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </FlexLayout>

                <StackLayout>
                    <!--<StackLayout>
                        <Label Text="Selected Trainers" Style="{StaticResource CenterMessageStyle}"/>
